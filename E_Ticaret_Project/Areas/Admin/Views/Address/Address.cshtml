
@{
    ViewData["Title"] = "Address";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@*// EKLE modelimin tasarımı*@
<div class="modal inmodal fade" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addForm">
                <div class="modal-header pt-4 pb-3">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
                    <h3>Adres Ekleme Sayfası</h3>
                </div>
                <div class="modal-body">
                    <input type="text" name="RegisterAddress" value="" placeholder="Adres" class="form-control" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Adresi Kaydet</button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*// GÜNCELLE modelimin tasarımı*@
<div class="modal inmodal fade" id="myModal6" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="updateForm">
                <div class="modal-header pt-4 pb-3">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
                    <h3>Adresi Güncelleme Sayfası</h3>
                </div>
                <div class="modal-body">
                    <input type="text" name="AdresID" class="form-control" required style="display: none;">
                    <input type="text" name="RegisterAddress" placeholder="Adres" class="form-control" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Adresi Güncelle</button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*DataTable*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5 class="pr-2">Adreslerin</h5>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5"><i class="fa fa-plus pr-1"></i>Ekle</button>
                </div>
                <div class="ibox-content">

                    <table id="categoryTable" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Adres ID</th>
                                <th>Adres</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* normalde buraya foreach yaparız ama ajaxla tabloyu doldurucaz*@
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
