@model List<Category>
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@*// modelimin tasarımı*@
<div class="modal inmodal fade" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header pt-4 pb-3">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
                    <h3>Kategori Ekleme Sayfası</h3>
                </div>
                <div class="modal-body">
                    <input type="text" name="CategoryName" value="" placeholder="Kategori Adı" class="form-control" required>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Kategoriyi Kaydet</button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>





@*Kategorinin CRUD işlemleri*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5 class="pr-2">Kategoriler</h5>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5"><i class="fa fa-plus pr-1"></i>Ekle</button>
                </div>
                <div class="ibox-content">

                    <table id="categoryTablosu" class="table table-striped table-bordered table-hover dataTables-example" ">
                        <thead>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {


<script>
    var table = null;
    $(function () {
        table = $('#categoryTablosu').DataTable({
            pageLength: 10,
            responsive: true,
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            },
            ajax: {
                url: '/Admin/Category/CategoryList',
                type: 'GET',
                dataType: 'json',
                dataSrc: ''
            },
            columns: [
                { data: 'categoryID' },
                { data: 'categoryName' },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<button class="btn btn-warning mr-2" type="button"><i class="fa fa-edit pr-1"></i>Düzenle</button>' +
                            '<button class="btn btn-danger" type="button" onclick="kategoriSil(' + data.categoryID + ')"><i class="fa fa-trash pr-1"></i>Sil</button>';
                    }
                }
            ]
        });
    });

</script>

<script>
    function kategoriSil(kategoriId) {
        $.ajax({
            url: '/Admin/Category/CategoryDelete',
            type: 'POST',
            data: { categoryID: kategoriId }, // Silinecek kategori ID'si
            success: function (response) {
                // Başarılı bir şekilde silindiğinde yapılacak işlemler
                console.log(response);
                table.ajax.reload();  //Silme işlemi bittikten sonra tabloyu yeniden göstersin

                toastr.success('Kategori silme işlemi başarılı.');
            },
            error: function (xhr, status, error) {
                // Hata durumunda yapılacak işlemler
                console.log("Hata: " + error);
            }
        });
    }
</script>
}