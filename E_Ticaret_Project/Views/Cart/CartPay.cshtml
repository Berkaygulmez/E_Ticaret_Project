@{
    ViewData["Title"] = "CartPay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        body {
            text-align: center;
        }

        .breadcrumb {
            display: inline-block;
            text-align: center;
        }

        .breadcrumb-item {
            display: inline-block;
            text-align: left;
        }

            .breadcrumb-item:not(:last-child)::after {

                padding: 0 5px;
