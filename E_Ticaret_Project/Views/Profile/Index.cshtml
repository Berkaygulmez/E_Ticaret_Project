@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <h1>Profilim</h1>

                <form asp-controller="Profile" asp-action="EditProfile" method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>İsim Soyisim</label>
                                <input id="ID" name="Register.RegisterID" type="text" class="form-control" value="@Model.Register.RegisterID" style="display: none;" required>
                                <input id="Name" name="Register.NameSurname" type="text" class="form-control" value="@Model.Register.NameSurname" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input id="Username" name="Register.UserName" type="text" class="form-control" value="@Model.Register.UserName" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Email </label>
                                <input id="Email" name="Register.Mail" type="text" class="form-control email" value="@Model.Register.Mail" required>
                            </div>
                        </div>
                     
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Adres </label>
                                <input id="Address" name="Register.Address" type="text" class="form-control" value="Yeni Adres Giriniz">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="DefaultAddress">Varsayılan Adres</label>
                        <select id="DefaultAddress" name="DefaultAddress" class="form-control">
                            @foreach (var item in Model.RegisterAddressList)
                            { 
                            <option value="@item.RegisterAddressID">@item.Address</option>
                            }
                        </select>
                    </div>

                    <br />
                    <div class="col-md-12 text-right">
                        <div class="form-group">
                            <button type="submit" id="saveButton" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('saveButton').addEventListener('click', function () {
        Swal.fire({
            title: 'Başarılı',
            text: 'Kaydetme İşlemi Başarılı.',
            icon: 'success', // Bildirim ikonu: success, error, warning, info
            confirmButtonText: 'Tamam',
            timer: 5000, // Bildirimin 5 saniye boyunca görüntülenmesi
            timerProgressBar: true // Zaman ilerlemesini göster
        });
    });
</script>

